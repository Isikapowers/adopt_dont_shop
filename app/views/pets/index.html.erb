<h1>All Pets</h1><br>

<%= render partial: 'search', locals: { path: "/pets", method: :get } %><br>

<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3>
  <p>
    Age: <%= pet.age %><br>
    Breed: <%= pet.breed %><br>
    Adoptable: <%= pet.adoptable %><br>
    You can find <%= pet.name %> at <%= link_to pet.shelter_name, "/shelters/#{pet.shelter.id}" %>!
  </p>

  <%= render partial: 'link', locals: { name: "Edit #{pet.name}", path: "/pets/#{pet.id}/edit", method: :get } %><br>
  <%= render partial: 'link', locals: { name: "Delete #{pet.name}", path: "/pets/#{pet.id}", method: :delete } %>
  <p></p>
<% end %><br><br>

<%= render partial: 'link', locals: { name: 'New Application', path: "/applications/new", method: :get } %>
